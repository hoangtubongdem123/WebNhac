@model Test1.Models.Songs

@{
    ViewBag.Title = "Chỉnh Sửa Bài Hát";
}

<h2>Chỉnh Sửa Bài Hát</h2>

@using (Html.BeginForm("Edit", "Songs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h4>Thông tin bài hát</h4>
    <hr />
    @Html.HiddenFor(model => model.ID_Song)

    <div class="form-group">
        @Html.LabelFor(model => model.NAME)
        @Html.TextBoxFor(model => model.NAME, new { @class = "form-control", placeholder = "Nhập tên bài hát" })
        @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_Singer, "Ca sĩ")
        @Html.DropDownList("ID_Singer", (SelectList)ViewBag.Singers, "Chọn ca sĩ", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Singer, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_Type, "Thể loại")
        @Html.DropDownList("ID_Type", (SelectList)ViewBag.Types, "Chọn thể loại", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Type, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ID_Album, "Album")
        @Html.DropDownList("ID_Album", (SelectList)ViewBag.Album, "Chọn album", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Album, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Path_BackGround, "Ảnh nền")
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        <p>Ảnh nền hiện tại: <b>@Html.DisplayFor(model => model.Path_BackGround)</b></p>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Path_Song, "Tệp bài hát")
        <input type="file" name="songFile" class="form-control" accept="mp3,audio/*" />
        <p class="help-block">Tệp bài hát hiện tại: <b>@Html.DisplayFor(model => model.Path_Song)</b></p>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-success" />
        <a href="~/Songs/Songs?sortOrder=id" class="btn btn-default">Hủy</a>
    </div>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-top: 20px;
    }

    form {
        max-width: 500px;
        margin: 30px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            color: #555;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group select {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group input[type="submit"] {
            background-color: #28a745;
            color: #fff;
            font-size: 16px;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .form-group input[type="submit"]:hover {
                background-color: #218838;
            }

        .form-group a {
            color: #6c757d;
            text-decoration: none;
            font-size: 14px;
            margin-left: 10px;
        }

            .form-group a:hover {
                text-decoration: underline;
            }

    .text-danger {
        font-size: 12px;
        color: #dc3545;
        margin-top: 5px;
    }
</style>
