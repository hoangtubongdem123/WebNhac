        $playlist_body.empty();
        

        data.forEach(function (playlist) {
            var playlistItem = `
                <div class="SectionItem" oncontextmenu="showContextMenu(event, ${playlist.ID_Playlist}, '${playlist.Name_Playlist}')">
                    <div class="SectionItemImg-Artis_playlist">
