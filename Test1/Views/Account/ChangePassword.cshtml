<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/fontEnd/assets/css/styles.css")" />
    <title>Đăng nhập</title>
</head>
<body>
    <svg class="login__blob" viewBox="0 0 566 840" xmlns="http://www.w3.org/2000/svg">
        <mask id="mask0" mask-type="alpha">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538
            0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393
            591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824
            167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z" />
        </mask>

        <g mask="url(#mask0)">
            <path d="M342.407 73.6315C388.53 56.4007 394.378 17.3643 391.538
            0H566V840H0C14.5385 834.991 100.266 804.436 77.2046 707.263C49.6393
            591.11 115.306 518.927 176.468 488.873C363.385 397.026 156.98 302.824
            167.945 179.32C173.46 117.209 284.755 95.1699 342.407 73.6315Z" />

            <!-- Chèn ảnh của bạn (kích thước khuyến nghị: 1000 x 1200) -->
            <image class="login__img" href="~/fontEnd/assets/img/bg-img.jpg" />
        </g>
    </svg>
    <div class="login container grid">
        <div class="login__access">
            <h1 class="login__title">Đổi mật khẩu.</h1>
            <div class="login__area">
                <form action="/Account/ChangePasswordHandle" method="post" class="login__form">
                    <div class="login__content grid">
                        <div class="login__box">
                            <input type="text" id="UserName" name="UserName" required placeholder=" " class="login__input">
                            <label for="UserName" class="login__label">Tên đăng nhập</label>
                            <i class="ri-user-fill login__icon"></i>
                        </div>


                        <div class="login__box">
                            <input type="password" id="oldPassword" name="oldPassword" required placeholder=" " class="login__input">
                            <label for="oldPassword" class="login__label">Mật khẩu cũ</label>
                            <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                        </div>

                        <div class="login__box">
                            <input type="password" id="newPassword" name="newPassword" required placeholder=" " class="login__input">
                            <label for="newPassword" class="login__label">Mật khẩu mới</label>
                            <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                        </div>

                        <div class="login__box">
                            <input type="password" id="cfmPassword" name="cfmPassword" required placeholder=" " class="login__input">
                            <label for="cfmPassword" class="login__label">Nhập lại mật khẩu</label>
                            <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                        </div>
                    </div>
                    <div id="alert" class="alert alert-danger" style="display: none;">
                        Đăng nhập không thành công
                    </div>



                    <button type="submit" class="login__button">Đổi mật khẩu</button>
                </form>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <p class="login__switch">

                    <a href="/Account/Login">Đăng nhập</a>
                </p>
            </div>
        </div>
    </div>

    <script src="~/fontEnd/assets/js/main.js"></script>


    <style>


        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
            position: relative;
        }

        .alert-danger {
            color: #a94442;
            background-color: #f2dede;
            border-color: #ebccd1;
        }
    </style>
</body>

</html>

