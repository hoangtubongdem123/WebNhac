<script>

   $.ajax({
    url: '@Url.Action("getAllType", "Home")',
    type: 'GET',
    dataType: 'json',
    success: function (data) {
       
        var $container1 = $('.gallerContainer').eq(0); 
        var $container2 = $('.gallerContainer').eq(1);

      
        $container1.empty();
        $container2.empty();

        data.Types.forEach(function (type, index) {
            var galleryItem = `
                <div class="gallerryItem">
                    <a href="#" class="gallerryLink">
                        <img src="${type.Path_Type}" alt="${type.TypeName}" class="gallrryImg">
                    </a>
                </div>
            `;
            if (index % 2 === 0) {
                $container1.append(galleryItem); 
            } else {
                $container2.append(galleryItem); 
            }
        });
    },
    error: function (error) {
        alert("Lỗi load");
    }
   });



